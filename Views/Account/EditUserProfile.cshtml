@using AntTrak.ViewModel
@using AntTrak.Helpers
@model UserProfile



@using (Html.BeginForm("EditUserProfile", "Account", FormMethod.Post, new { enctype = "Multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.AvatarUrl)

    <div class="container">
        <div class="row">
            <!-- New Card row -->
            <div class="col-6 offset-2">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">@ViewBag.CardTitle</h3>
                        <div class="card-tools">  </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 offset-4">
                                <img src="@Model.AvatarUrl" class="img-circle elevation-2">
                            </div>
                            <br />
                            <br />

                        </div>
                        <div class="row">

                            <div class="col-3">
                                @Html.Label("Select New Avatar")
                            </div>
                            <div class="col-9">
                                <input type="file" name="image" class="form-control" placeholder="">
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-3">
                                @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
                            </div>
                            <div class="col-9">
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-3">
                                @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
                            </div>
                            <div class="col-9">
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-3">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                            </div>
                            <div class="col-9">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="form-control btn btn-warning btn-block">Save Changes</button>
                            </div>
                            <div class="col">
                                @Html.ActionLink("Cancel", "Dashboard", "Home", null, new { @class = "form-control btn btn-dark btn-block" })
                            </div>
                        </div>
                    </div>  <!-- /.card-footer-->
                </div>  <!-- /.card -->
            </div>
        </div> <!-- (New Card row) -->
    </div>
}
