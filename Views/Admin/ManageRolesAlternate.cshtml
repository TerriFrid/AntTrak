@*@model IEnumerable<AntTrak.ViewModel.CustomUserData>*@
@model IEnumerable<AntTrak.ViewModel.RoleManagement>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="container">
        <div class="row">
            <!-- New Card row -->
            <div class="col">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">@ViewBag.CardTitle </h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            @*<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                    <i class="fas fa-times"></i>
                                </button*@>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <input type="submit" value="Save Roles" class="btn btn-warning" />
                                @Html.ActionLink("Close", "Dashboard", "Home", new { @class = "btn btn-dark" })
                            </div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Full Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Email")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Role")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>                                           
                                            @Html.DisplayFor(model => item.CurrentUser.Fullname)

                                        </td>
                                        <td>
                                          @Html.DisplayFor(model => item.CurrentUser.Email)
                                        </td>
                                        <td>
                                            @*@Html.DropDownListFor(model => item.CurrentUser.Roles.FirstOrDefault().RoleId, item.Roles, "Unassigned", new { @class = "form-control" })*@
                                            @Html.DropDownList("Roles", item.Roles, new { @class = "form-control" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        
                    </div>  <!-- /.card-footer-->
                </div>  <!-- /.card -->
            </div>
        </div> <!-- (New Card row) -->
    </div>
}
