@using AntTrak.ViewModel
@model Dashboard
@{
    ViewBag.Title = "Dashboard";
}
<style>
    .noWrap 
    {
        white-space: nowrap;
    }

</style>

<!-- Content Header (Page header) -->
<div class="content-header">

    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->

</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>150</h3>

                        <p>New Orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>53<sup style="font-size: 20px">%</sup></h3>

                        <p>Bounce Rate</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>44</h3>

                        <p>User Registrations</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>65</h3>

                        <p>Unique Visitors</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <div class="row"> <!-- Ticket row -->
            
                <div class="col-12">
                    <div class="card card-primary card-tabs">
                        <div class="card-header p-0 pt-1">
                            <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-tabs-one-home-tab" data-toggle="pill" href="#custom-tabs-one-home" role="tab" aria-controls="custom-tabs-one-home" aria-selected="true">@ViewBag.CardTitle</a>
                                </li>
                                @if (!User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-tabs-one-profile-tab" data-toggle="pill" href="#custom-tabs-one-profile" role="tab" aria-controls="custom-tabs-one-profile" aria-selected="false">@ViewBag.CardTitle2</a>
                                    </li>
                                }
                                @if (User.IsInRole("Developer"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" id="custom-tabs-one-messages-tab" data-toggle="pill" href="#custom-tabs-one-messages" role="tab" aria-controls="custom-tabs-one-messages" aria-selected="false">@ViewBag.CardTitleDev</a>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="custom-tabs-one-tabContent">
                                <div class="tab-pane fade show active" id="custom-tabs-one-home" role="tabpanel" aria-labelledby="custom-tabs-one-home-tab">
                                    @*My Tickets Tab*@
                                    @if (User.IsInRole("Submitter"))
                                    {
                                        <p>
                                            @Html.ActionLink("Create New", "Create", "Tickets")
                                        </p>
                                    }
                                    @*@Html.Partial("_TicketTable", Model.AllMyTickets)*@
                                    @*@Html.Action("_TicketTable", "Home", 1)*@
                                    @if (User.IsInRole("Submitter"))
                                    {
                                        <p>
                                            @Html.ActionLink("Create New", "Create", "Tickets")
                                        </p>
                                    }

                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Project")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Developer")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Title")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Submitter")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Priority")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Type")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Status")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Created")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Last Updated")
                                            </th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.AllMyTickets)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Project.Name)
                                            </td>
                                            <td>
                                                @{
                                                    var dev = item.Developer;
                                                    var devName = dev != null ? dev.Fullname : "Unassigned";
                                                }
                                                @devName
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Submitter.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketType.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                            </td>
                                            <td class="noWrap">
                                                @Html.DisplayFor(modelItem => item.Created)
                                            </td>
                                            <td class="noWrap">
                                                @Html.DisplayFor(modelItem => item.Updated)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Details", "Details", "Tickets", new { id = item.Id }, null)
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                </div>

                                <div class="tab-pane fade" id="custom-tabs-one-profile" role="tabpanel" aria-labelledby="custom-tabs-one-profile-tab">
                                    <!-- All Tickets Tab -->
                                    @if (User.IsInRole("Submitter"))
                                    {
                                        <p>
                                            @Html.ActionLink("Create New", "Create", "Tickets")
                                        </p>
                                    }
                                    @*@Html.Partial("_TicketTable", Model.AllTickets)*@
                                    @*@Html.Action("_TicketTable", "Home", 2)*@

                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayName("Project")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Developer")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Title")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Submitter")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Priority")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Type")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Status")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Created")
                                                </th>
                                                <th>
                                                    @Html.DisplayName("Last Updated")
                                                </th>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <th></th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.AllTickets)
                                            {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Project.Name)
                                                </td>
                                                <td>
                                                    @{
                                                        var dev = item.Developer;
                                                        var devName = dev != null ? dev.Fullname : "Unassigned";
                                                    }
                                                    @devName
                                                </td>                                                
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Title)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Submitter.Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                                </td>
                                                <td class="noWrap">
                                                    @Html.DisplayFor(modelItem => item.Created)
                                                </td>
                                                <td class="noWrap">
                                                    @Html.DisplayFor(modelItem => item.Updated)
                                                </td>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <td>
                                                        @Html.ActionLink("Details", "Details", "Tickets", new { id = item.Id }, null)
                                                    </td>
                                                }
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                @if (User.IsInRole("Developer"))
                                {
                            <div class="tab-pane fade" id="custom-tabs-one-messages" role="tabpanel" aria-labelledby="custom-tabs-one-messages-tab">
                                @*@Html.Partial("_TicketTable", Model.AllMyProjectsTickets)*@
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Project")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Developer")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Title")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Submitter")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Priority")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Type")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Status")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Created")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Last Updated")
                                            </th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.AllMyProjectsTickets)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Project.Name)
                                            </td>
                                            <td>
                                                @{
                                                    var dev = item.Developer;
                                                    var devName = dev != null ? dev.Fullname : "Unassigned";
                                                }
                                                @devName
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Submitter.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketType.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                            </td>
                                            <td class="noWrap">
                                                @Html.DisplayFor(modelItem => item.Created)
                                            </td>
                                            <td class="noWrap">
                                                @Html.DisplayFor(modelItem => item.Updated)
                                            </td>
                                            <td>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>                                
                            </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>           
        </div> <!-- (ticket row) -->
        <div class="row">
            <!-- New Card row -->
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">New Card</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        Start creating your amazing application!
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        Footer
                    </div>  <!-- /.card-footer-->
                </div>  <!-- /.card -->
            </div>
        </div> <!-- (New Card row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}