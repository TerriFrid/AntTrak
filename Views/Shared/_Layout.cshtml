@using Microsoft.AspNet.Identity
@using AntTrak.Helpers


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dr.d'Bug | Dashboard</title>
