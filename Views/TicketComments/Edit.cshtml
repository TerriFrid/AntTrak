@model AntTrak.Models.TicketComment


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.TicketId)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.Created)

    <div class="container">
        <div class="row">
            <!-- New Card row -->
            <div class="col-8">
                <div class="card card-ticket">
                    <div class="card-header">
                        <h3 class="card-title">Edit Ticket Comment</h3>
                        <div class="card-tools"></div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                @Html.Label("Comment")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">

                                @Html.TextArea("Body", new { @class = "form-control rows = 50, cols = 40" })
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="row">
                            <div class="col">
                                <input type="submit" value="Save" class="form-control btn btn-ticket" />
                            </div>
                            <div class="col">
                                @Html.ActionLink("Back to Ticket", "Details", "Tickets", new { id = Model.TicketId }, new { @class = "form-control btn btn-dark" })
                            </div>
                        </div>
                    </div>  <!-- /.card-footer-->
                </div>  <!-- /.card -->
            </div>
        </div> <!-- (New Card row) -->
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
